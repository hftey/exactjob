function OnDeleteSupplier(Supplier_id){
	$.prompt(
		"<?=$this->translate->_('Are you sure you want to remove the supplier?')?>",{
		buttons: { Ok: true, Cancel: false },
		submit:function(e,v,m,f){
					if(v){
						document.location='/admin/system/supplier/remove_supplier/'+Supplier_id;
					}
				  }
	});
}

