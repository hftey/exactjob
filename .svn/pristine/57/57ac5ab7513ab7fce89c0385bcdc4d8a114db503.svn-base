<script language='Javascript'>
var FinishedOnce = false;

$("#bgvid").bind("loadeddata", function() {
	$("#idLoadVid").css("visibility", "hidden");
})

$("#bgvid").bind("ended", function() {
	if (!FinishedOnce) {
		setTimeout(function(){
			$('#divVideo #bgvid source').attr('src', 'video/intro_loop.mp4');
			$('#divVideo #bgvid').attr('loop', 'loop');
			$("#divVideo #bgvid")[0].load();	
			$("#divVideo #bgvid")[0].play();	
			
		}, 3000);
		
		FinishedOnce = true;
		$("#idLoadVid").css("visibility", "visible");

	}else
	{
		$("#divVideo #bgvid")[0].load();	
		$("#divVideo #bgvid")[0].play();	
	}
 
});

</script>

