
<script language='Javascript'>

function validateEmail(email) { 
    var re = /^(([^<>()[\]\\.,;:\s@\"]+(\.[^<>()[\]\\.,;:\s@\"]+)*)|(\".+\"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
    return re.test(email);
} 

function isValidPassword(input)
{
	 if (input.length < 8)
		return false;


	 var reg = /[a-zA-Z]/;
	 var reg2 = /[0-9]/;
	 return reg.test(input) && reg2.test(input);
}  



$(document).ready(function() {
	$("#SubmitConfirm").click (function() { 
		
		var error = false;
        if ($('#userID').val()=='') { 
			
			$('#userID').poshytip({ bgImageFrameSize:8, content: '<img src="/images/icons/IconAlert.png"><?=$this->translate->_('Please enter the username')?>', className: 'tip-yellow', showOn:'none', alignTo: 'target', alignX: 'right',alignY: 'center',offsetX: 5, timeOnScreen: 3000});
			$('#userID').poshytip('show');

			error = true;
		}	
		
		
		if ($('#userPassword').val()) {
			if (!isValidPassword($('#userPassword').val()))
			{
				$('#userPassword').poshytip({ bgImageFrameSize:8, content: '<img src="/images/icons/IconAlert.png"><?=$this->translate->_('Password must contain at least 8 alphanumeric characters')?>.', showOn:'none', className: 'tip-yellow', alignTo: 'target', alignX: 'right',alignY: 'center',offsetX: 5,timeOnScreen: 3000});
				$('#userPassword').poshytip('show');
						
				error = true;			
			}
			
			if ($('#userPassword').val()!=$('#userPassword2').val()) {   
				$('#userPassword2').poshytip({bgImageFrameSize:8,  content: '<img src="/images/icons/IconAlert.png"><?=$this->translate->_('Passwords entered are not the same')?>.', showOn:'none', className: 'tip-yellow', alignTo: 'target', alignX: 'right',alignY: 'center',offsetX: 5,timeOnScreen: 3000});
				$('#userPassword2').poshytip('show');
				error = true; 
			}	
			
		}
				
		
		
		if (error)
			return false; 			
	})
	

});
</script>

